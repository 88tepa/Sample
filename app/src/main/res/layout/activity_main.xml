<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_topgun_maverick_mustang"
                            android:layout_width="800dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/topgun_maverick_mustang" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_f22_flying"
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            app:srcCompat="@drawable/f22_flying_2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|left"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal|top"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/layout_menu_select_1"
                                    android:layout_width="220dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="100dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageButton
                                            android:id="@+id/ib_menu_select_button_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/menu_select_button_selector" />

                                        <TextView
                                            android:id="@+id/tv_menu_select_text_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingTop="3dp"
                                            android:text="Score"
                                            android:textColor="#000000"
                                            android:textSize="25dp" />
                                    </FrameLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_menu_select_2"
                                    android:layout_width="220dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="30dp"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageButton
                                            android:id="@+id/ib_menu_select_button_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/menu_select_button_selector" />

                                        <TextView
                                            android:id="@+id/tv_menu_select_text_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingTop="3dp"
                                            android:text="GAME 1"
                                            android:textColor="#000000"
                                            android:textSize="25dp" />
                                    </FrameLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_menu_select_3"
                                    android:layout_width="220dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="30dp"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageButton
                                            android:id="@+id/ib_menu_select_button_3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/menu_select_button_selector" />

                                        <TextView
                                            android:id="@+id/tv_menu_select_text_3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingTop="3dp"
                                            android:text="GAME 2"
                                            android:textColor="#000000"
                                            android:textSize="25dp" />
                                    </FrameLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_menu_select_4"
                                    android:layout_width="220dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="30dp"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageButton
                                            android:id="@+id/ib_menu_select_button_4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@android:color/transparent"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/menu_select_button_selector" />

                                        <TextView
                                            android:id="@+id/tv_menu_select_text_4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingTop="3dp"
                                            android:text="Option"
                                            android:textColor="#000000"
                                            android:textSize="25dp" />
                                    </FrameLayout>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="vertical"></LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_open_cloud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_cloud_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cloud_open" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_open_cloud_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_cloud_open_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cloud_open_2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_open_cloud_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_cloud_open_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cloud_open" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_menu_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_main_menu_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sea_of_clouds3_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_menu_background3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_main_menu_background3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sea_of_clouds3_1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_menu_background2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_main_menu_background2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sea_of_clouds3_2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivtitle"
                        android:layout_width="250dp"
                        android:layout_height="300dp"
                        app:srcCompat="@drawable/strike_air_force_title_pixel" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_touch_to_start"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ImageButton
                        android:id="@+id/ib_touch_to_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/touch_to_start" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_intro_gate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_intro_gate_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gate_left" />

            <ImageView
                android:id="@+id/iv_intro_gate_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/gate_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_intro_gate_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="horizontal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layout_intro_spin_plane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_spin_plane_jet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/spin_plane_jet" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="200dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/project_logo_png" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>